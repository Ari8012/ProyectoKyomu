@model FronEnd.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Detalles de categoria";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<div>
    <h4>Detalles de la categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div class="form-group mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdCategoria }, new { @class = "btn btn-outline-warning" })
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</div>