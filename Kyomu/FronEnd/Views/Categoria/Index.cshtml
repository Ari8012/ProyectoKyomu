@model IEnumerable<FronEnd.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<div class="d-flex align-items-center mb-3">
    <a class="btn btn-outline-primary me-3" asp-action="Create">Agregar categoria</a>
    <div class="input-group" style="max-width: 250px;">
        <span class="input-group-text" id="search-addon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85zm-5.442 1.398a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11z" />
            </svg>
        </span>
        <input type="search" id="search-box" class="form-control" placeholder="Buscar categoria" aria-describedby="search-addon">
    </div>
</div>

<div class="row" id="cardsContainer">
    @foreach (var item in Model)
    {
        <div class="col-md-4 card-container">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.NombreCategoria)</h5>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdCategoria }, new { @class = "btn btn-sm btn-outline-secondary" })
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdCategoria }, new { @class = "btn btn-sm btn-outline-warning" })                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCategoria }, new { @class = "btn btn-sm btn-outline-danger" })
                        </div>
                        <small class="text-muted">ID: @item.IdCategoria</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var searchBox = document.getElementById("search-box");

            function filterCards() {
                var filter = searchBox.value.toLowerCase();
                var cards = document.querySelectorAll(".card-container");

                cards.forEach(function(card) {
                    var cardText = card.textContent.toLowerCase();
                    card.style.display = (cardText.indexOf(filter) !== -1) ? "block" : "none";
                });
            }

            searchBox.addEventListener("keyup", filterCards);
        });
    </script>
}
