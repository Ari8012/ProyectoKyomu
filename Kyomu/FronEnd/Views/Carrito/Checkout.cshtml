@model FronEnd.Models.CarritoViewModel

@{
    ViewData["Title"] = "Detalles de tu Pedido";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Detalles de tu pedido</h2>

    <form method="post" asp-action="ConfirmarPedido">
        <!-- Método de Pago -->
        <div class="form-group mb-4">
            <label for="MetodoPago" class="form-label">Método de Pago</label>
            <select id="MetodoPago" name="IdMetodoSeleccionado" class="form-control" required>
                @foreach (var metodo in Model.MetodosPagoDisponibles)
                {
                    <option value="@metodo.Value"
                            selected="@((metodo.Value == Model.IdMetodoSeleccionado.ToString()) ? "selected" : "")">
                        @metodo.Text
                    </option>
                }
            </select>
        </div>

        <!-- Tipo de Entrega -->
        <div class="form-group mb-4">
            <label for="Entrega" class="form-label">Tipo de Entrega</label>
            <select id="Entrega" name="TipoEntregaSeleccionado" class="form-control" required>
                @foreach (var metodo in Model.OpcionesEntrega)
                {
                    <option value="@metodo.Value"
                            selected="@((metodo.Value == Model.TipoEntregaSeleccionado.ToString()) ? "selected" : "")">
                        @metodo.Text
                    </option>
                }
            </select>
        </div>

        <!-- Resumen del carrito -->
        <h3 class="mt-5">Resumen de tu carrito</h3>
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr class="table-dark">
                    <th>Platillo</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Subtotal</td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="mt-4">Total: <span class="text-success">@Model.Total</span></h4>

        <!-- Botón de Confirmar Pedido -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-lg btn-primary">Confirmar Pedido</button>
        </div>
    </form>
</div>
