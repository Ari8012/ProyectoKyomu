@model FronEnd.Models.MetodoPagoViewModel

@{
    ViewData["Title"] = "Detalles del Método";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<div>
    <h4>Información Completa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID Método:</dt>
        <dd class="col-sm-9">@Model.IdMetodo</dd>

        <dt class="col-sm-3">Tipo de Método:</dt>
        <dd class="col-sm-9">@Model.TipoMetodo</dd>
    </dl>
</div>
<div class="form-group mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdMetodo }, new { @class = "btn btn-outline-warning" })
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>