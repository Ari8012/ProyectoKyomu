@model FronEnd.Models.RolViewModel

@{
    ViewData["Title"] = "Eliminar Rol";
}

<h2>@ViewData["Title"]</h2>

<h3 class="text-danger">¿Está seguro que desea eliminar este rol?</h3>

<div class="card">
    <div class="card-header">
        <h4>@Model.NombreRol</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdRol" />
            <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>