@model FronEnd.Models.RolViewModel

@{
    ViewData["Title"] = "Eliminar Rol";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<h3>¿Está seguro que desea eliminar este rol?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.NombreRol</dd>

        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRol" />
        <button type="submit" class="btn btn-outline-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>