@model FronEnd.Models.RolViewModel

@{
    ViewData["Title"] = "Crear Rol";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<h4>Nuevo Rol</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombreRol" class="control-label"></label>
                <input asp-for="NombreRol" class="form-control" placeholder="Nombre del rol" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Descripción del rol" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Agregar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}