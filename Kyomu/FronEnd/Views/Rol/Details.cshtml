@model FronEnd.Models.RolViewModel

@{
    ViewData["Title"] = "Detalles del Rol";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<div>
    <h4>Información Completa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID Rol:</dt>
        <dd class="col-sm-9">@Model.IdRol</dd>

        <dt class="col-sm-3">Nombre:</dt>
        <dd class="col-sm-9">@Model.NombreRol</dd>

        <dt class="col-sm-3">Descripción:</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>
    </dl>
</div>
<div class="form-group mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdRol }, new { @class = "btn btn-outline-warning" })
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>