                        <h4>Bebidas</h4>
                    </a>
                </li><!-- End tab nav item -->

            </ul>

            <div class="tab-content">

                <!-- Entradas -->
                <div class="tab-pane fade active show" id="menu-starters">
                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>Entradas</h3>
                    </div>
                    <div class="row gy-5">
                        @foreach (var item in entradas)
                        {
                            <div class="col-lg-4 menu-item">
                                <a href="@item.Imagen" class="glightbox">
                                    <img src="@item.Imagen" class="menu-img img-fluid" alt="@item.Nombre">
                                </a>
                                <h4>@item.Nombre</h4>
                                <p class="ingredients">@item.Descripcion</p>
                                <p class="price">@item.Precio.ToString("C")</p>

                                <!-- Botón de Ordenar -->
                                <form asp-controller="Carrito" asp-action="AddItem" method="post">
                                    <input type="hidden" name="idPlatillo" value="@item.IdPlatillo" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-ordenar">
                                        <i class="bi bi-cart-plus"></i> Ordenar
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>

                <!-- Sushi -->
                <div class="tab-pane fade" id="menu-breakfast">
                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>Sushi</h3>
                    </div>
                    <div class="row gy-5">
                        @foreach (var item in platosFuertes)
                        {
                            <div class="col-lg-4 menu-item">
                                <a href="@item.Imagen" class="glightbox">
                                    <img src="@item.Imagen" class="menu-img img-fluid" alt="@item.Nombre">
                                </a>
                                <h4>@item.Nombre</h4>
                                <p class="ingredients">@item.Descripcion</p>
                                <p class="price">@item.Precio.ToString("C")</p>

                                <!-- Botón de Ordenar -->
                                <form asp-controller="Carrito" asp-action="AddItem" method="post">
                                    <input type="hidden" name="idPlatillo" value="@item.IdPlatillo" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-ordenar">
                                        <i class="bi bi-cart-plus"></i> Ordenar
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>

                <!-- Bebidas -->
                <div class="tab-pane fade" id="menu-lunch">
                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>Bebidas</h3>
                    </div>
                    <div class="row gy-5">
                        @foreach (var item in bebidas)
                        {
                            <div class="col-lg-4 menu-item">
                                <a href="@item.Imagen" class="glightbox">
                                    <img src="@item.Imagen" class="menu-img img-fluid" alt="@item.Nombre">
                                </a>
                                <h4>@item.Nombre</h4>
                                <p class="ingredients">@item.Descripcion</p>
                                <p class="price">@item.Precio.ToString("C")</p>

                                <!-- Botón de Ordenar -->
                                <form asp-controller="Carrito" asp-action="AddItem" method="post">
                                    <input type="hidden" name="idPlatillo" value="@item.IdPlatillo" />
                                    <input type="hidden" name="cantidad" value="1" />
                                    <button type="submit" class="btn btn-primary btn-ordenar">
                                        <i class="bi bi-cart-plus"></i> Ordenar
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>

            </div>

        </div>
    </section>



