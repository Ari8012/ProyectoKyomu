@model FronEnd.Models.PagoViewModel
@inject FronEnd.Helpers.Interfaces.IPedidoHelper _pedidoHelper
@inject FronEnd.Helpers.Interfaces.IMetodoPagoHelper _metodoPagoHelper

@{
    ViewData["Title"] = "Detalles de Pago";
    var pedido = _pedidoHelper.GetPedido(Model.IdPedido);
    var metodo = _metodoPagoHelper.GetMetodoPago(Model.IdMetodo);
}

<h1 id="titulo">@ViewData["Title"]</h1>

<div>
    <h4>Información completa del pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID Pago:</dt>
        <dd class="col-sm-9">@Model.IdPago</dd>

        <dt class="col-sm-3">Pedido:</dt>
        <dd class="col-sm-9">
            #@Model.IdPedido - @pedido?.FechaPedido.ToString("dd/MM/yyyy")
            <small class="text-muted d-block">Estado: @pedido?.Estado</small>
        </dd>

        <dt class="col-sm-3">Método de Pago:</dt>
        <dd class="col-sm-9">
            @metodo?.TipoMetodo
            <small class="text-muted d-block">ID Método: @Model.IdMetodo</small>
        </dd>

        <dt class="col-sm-3">Monto:</dt>
        <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-3">Fecha y Hora:</dt>
        <dd class="col-sm-9">@Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>
<div class="form-group mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdPago }, new { @class = "btn btn-outline-warning" })
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>