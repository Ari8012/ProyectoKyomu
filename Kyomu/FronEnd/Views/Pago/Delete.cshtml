@model FronEnd.Models.PagoViewModel

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<h3>¿Está seguro que desea eliminar este registro de pago?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID Pago:</dt>
        <dd class="col-sm-9">@Model.IdPago</dd>

        <dt class="col-sm-3">Pedido Relacionado:</dt>
        <dd class="col-sm-9">#@Model.IdPedido - @ViewBag.PedidoInfo</dd>

        <dt class="col-sm-3">Método de Pago:</dt>
        <dd class="col-sm-9">@ViewBag.MetodoPagoInfo</dd>

        <dt class="col-sm-3">Monto:</dt>
        <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-3">Fecha:</dt>
        <dd class="col-sm-9">@Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPago" />
        <button type="submit" class="btn btn-outline-danger">Confirmar Eliminación</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>