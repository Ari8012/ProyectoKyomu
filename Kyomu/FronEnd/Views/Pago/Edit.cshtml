@model FronEnd.Models.PagoViewModel

@{
    ViewData["Title"] = "Editar Pago";
}

<h1 id="titulo">@ViewData["Title"]</h1>

<h4>Modificar información de pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPago" />

            <div class="form-group">
                <label asp-for="IdPedido" class="control-label">Pedido</label>
                <select asp-for="IdPedido" asp-items="Model.PedidosDisponibles" class="form-control">
                    <option value="">-- Seleccionar Pedido --</option>
                </select>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="IdMetodo" class="control-label">Método de Pago</label>
                <select asp-for="IdMetodo" asp-items="Model.MetodosPagoDisponibles" class="form-control">
                    <option value="">-- Seleccionar Método --</option>
                </select>
                <span asp-validation-for="IdMetodo" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" type="date" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}