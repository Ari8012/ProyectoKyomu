@model FronEnd.Models.PagoViewModel

@{
    ViewData["Title"] = "Editar Pago";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdPago" />

    <div class="form-group">
        <label asp-for="IdPedido" class="control-label">Pedido</label>
        <select asp-for="IdPedido" asp-items="Model.PedidosDisponibles" class="form-control">
            <option value="">-- Seleccionar Pedido --</option>
        </select>
        <span asp-validation-for="IdPedido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdMetodo" class="control-label">Método de Pago</label>
        <select asp-for="IdMetodo" asp-items="Model.MetodosPagoDisponibles" class="form-control">
            <option value="">-- Seleccionar Método --</option>
        </select>
        <span asp-validation-for="IdMetodo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaPago" class="control-label"></label>
        <input asp-for="FechaPago" class="form-control" />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>