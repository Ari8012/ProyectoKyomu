@model FronEnd.Models.PedidoViewModel
@inject FronEnd.Helpers.Interfaces.IUsuarioHelper _usuarioHelper

@{
    ViewData["Title"] = "Detalles del Pedido";
    var usuario = _usuarioHelper.GetUsuario(Model.IdUsuario);
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Pedido:</dt>
        <dd class="col-sm-10">@Model.IdPedido</dd>

        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@usuario?.Nombre (@usuario?.CorreoElectronico)</dd>

        <dt class="col-sm-2">Fecha Pedido:</dt>
        <dd class="col-sm-10">@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Fecha Entrega:</dt>
        <dd class="col-sm-10">@(Model.FechaEntrega?.ToString("dd/MM/yyyy HH:mm") ?? "No entregado")</dd>

        <dt class="col-sm-2">Tipo Entrega:</dt>
        <dd class="col-sm-10">@Model.TipoEntrega</dd>

        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>

        <dt class="col-sm-2">Estado:</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdPedido" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>